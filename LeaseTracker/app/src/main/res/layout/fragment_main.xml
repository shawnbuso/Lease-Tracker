<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivityFragment">
    
    <EditText
        android:id="@+id/current_miles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:inputType="number"/>

    <com.shawnbusolits.leasetracker.ColorProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/total_progress_bar"
        android:layout_below="@id/current_miles"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"/>

    <View
        android:id="@+id/vertical_line"
        android:layout_below="@id/current_miles"
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:background="#000000"
        android:layout_marginTop="15dp"/>
    
    <TextView
        android:id="@+id/total_text_view"
        android:layout_below="@id/vertical_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <com.shawnbusolits.leasetracker.ColorProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/current_progress_bar"
        android:layout_below="@id/total_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/current_text_view"
        android:layout_below="@id/current_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/daily_text_view"
        android:layout_below="@id/current_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

</RelativeLayout>